<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/fund_icon"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:layout_constraintVertical_bias="0.46"
        android:src="@drawable/fund_note_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coming_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="訂單處理中..."
        android:textColor="#7687C7"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/fund_icon"
        app:layout_constraintStart_toStartOf="@+id/fund_icon"
        app:layout_constraintTop_toBottomOf="@+id/fund_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>