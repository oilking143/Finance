<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/trade_list_bg_frame">

    <TextView
        android:id="@+id/fund_type"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/trade_type_label_frame"
        android:ems="1"
        android:text="出款"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#D6DFFF"
        android:text="89/06/04 12:00:00"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/fund_type"
        />

    <TextView
        android:id="@+id/level_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="會員等級:"
        android:textColor="#7687C7"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@+id/create_time"
        app:layout_constraintBottom_toBottomOf="@+id/create_time"
        app:layout_constraintStart_toEndOf="@+id/create_time" />

    <TextView
        android:id="@+id/level_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99"
        android:textColor="#7687C7"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/create_time"
        app:layout_constraintTop_toTopOf="@+id/create_time"
        app:layout_constraintStart_toEndOf="@+id/level_title" />

    <TextView
        android:id="@+id/payment_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#D6DFFF"
        android:text="1234567890"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/create_time"
        />

    <TextView
        android:id="@+id/trade_fund_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交易金額:"
        android:textColor="#D6DFFF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/level_title"
        app:layout_constraintBottom_toBottomOf="@+id/payment_channel"
        app:layout_constraintTop_toTopOf="@+id/payment_channel" />

    <TextView
        android:id="@+id/trade_fund_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99NT"
        android:textColor="#D6DFFF"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/trade_fund_title"
        app:layout_constraintBottom_toBottomOf="@+id/payment_channel"
        app:layout_constraintTop_toTopOf="@+id/payment_channel" />

    <LinearLayout
        android:id="@+id/check_order"
        android:layout_width="95dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:background="@drawable/tradelist_tail_btn_frame">

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="#0A3758"
         android:textSize="14sp"
         android:textStyle="bold"
         android:text="查看訂單"/>


    </LinearLayout>
    
    
</androidx.constraintlayout.widget.ConstraintLayout>