<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/account_name_content"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="戶名:"
            android:textColor="#0A3358"
            android:textSize="30sp"
            android:layout_marginStart="10dp"

            />

        <EditText
            android:id="@+id/account_name_txt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="8"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:hint="戶名:"
            android:textSize="25sp"
            android:textColor="#2E3750"
            android:background="@drawable/date_info_frame"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/account_number_content"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/account_name_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帳號:"
            android:textColor="#0A3358"
            android:textSize="30sp"
            android:layout_marginStart="10dp"

            />

        <EditText
            android:id="@+id/account_number_txt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="8"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:hint="戶名:"
            android:textSize="25sp"
            android:textColor="#2E3750"
            android:background="@drawable/date_info_frame"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bank_name_content"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/account_number_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="銀行名稱:"
            android:textColor="#0A3358"
            android:textSize="30sp"
            android:layout_marginStart="10dp"

            />

        <EditText
            android:id="@+id/bank_name_txt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="8"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:hint="銀行名稱"
            android:textSize="25sp"
            android:textColor="#2E3750"
            android:background="@drawable/date_info_frame"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/is_withdraw_content"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bank_name_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="是否為收益提款卡:"
            android:textColor="#0A3358"
            android:textSize="30sp"

            />
        <ToggleButton
            android:id="@+id/withdraw_toggle"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textOff="否"
            android:textOn="是"
            android:textColor="@drawable/custom_text_selector"
            android:textSize="25sp"
            android:background="@drawable/custom_toggle_selector" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payment_channel_content"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/is_withdraw_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       >

        <TextView
            android:id="@+id/channel_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="交易通道:"
            android:textColor="#0A3358"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <Spinner
            android:id="@+id/channel_spinner"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:entries="@array/channel_name"
            android:layout_marginStart="10dp"
            android:spinnerMode="dropdown"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/channel_title"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/icon_drop_down_arror"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="20dp"
           />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_channel_content"
        android:background="@drawable/close_btn_frame"
        >

        <TextView
            android:id="@+id/create_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="送出"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>