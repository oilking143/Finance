<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_dialog_outer_frame"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="出款訂單"
        android:layout_marginTop="25dp"
        android:textColor="#9CA7C3"
        android:textSize="32sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20sp"
        >

        <TextView
            android:id="@+id/order_num_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商戶訂單號:"
            android:textColor="#9CA7C3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_num_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345678"
            android:textStyle="bold"
            android:textColor="#0A3358"
            android:textSize="16sp"
/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20sp"
        >
        <TextView
            android:id="@+id/order_create_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="訂單建立時間:"
            android:textColor="#9CA7C3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_create_time_cotent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023/01/01"
            android:textColor="#0A3358"
            android:textStyle="bold"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20sp"
        >
        <TextView
            android:id="@+id/trader_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易員:"
            android:textColor="#9CA7C3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/trader_name_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="嚇嚇叫"
            android:textColor="#0A3358"
            android:textStyle="bold"
            android:textSize="16sp" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20sp"
        >
        <TextView
            android:id="@+id/order_over_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="訂單完成時間:"
            android:textColor="#9CA7C3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_over_time_cotent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023/01/01"
            android:textColor="#0A3358"
            android:textStyle="bold"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20sp"
        >
        <TextView
            android:id="@+id/success_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="訂單成功:"
            android:textColor="#9CA7C3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/status_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="訂單失敗"
            android:textColor="#0A3358"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20sp"
        >


        <TextView
            android:id="@+id/trade_fund_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易金額:"
            android:textColor="#9CA7C3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/trade_fund_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100元"
            android:textColor="#0A3358"
            android:textStyle="bold"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20sp"
        >


        <TextView
            android:id="@+id/success_confirm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成功驗證圖片:"
            android:textColor="#9CA7C3"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/success_confirm_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="appadd.jpg"
                android:textColor="#0A3358"
                android:textStyle="bold"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#3C5E8F"/>

        </LinearLayout>



    </LinearLayout>

    <ImageView
        android:id="@+id/repoet_result_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:visibility="gone"
        android:src="@drawable/card_recycler_frame"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20sp"
        >


        <TextView
            android:id="@+id/note_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="備註:"
            android:textColor="#9CA7C3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/note_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text=" "
            android:textColor="#0A3358"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/btn_close"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="right"
        android:background="@drawable/order_confirm_btn_frame"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="60dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:text="關閉" />

</LinearLayout>

</LinearLayout>