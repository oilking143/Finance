<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_dialog_outer_frame"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20sp"
        >
        <TextView
            android:id="@+id/bank_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="銀行名稱:"
            android:textColor="#9CA7C3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bank_name_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈銀行"
            android:textColor="#0A3358"
            android:textSize="16sp"
/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20sp"
        >
        <TextView
            android:id="@+id/account_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="戶名:"
            android:textColor="#9CA7C3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/account_name_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="超級大戶"
            android:textColor="#0A3358"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20sp"
        >
        <TextView
            android:id="@+id/bank_account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="銀行帳號:"
            android:textColor="#9CA7C3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bank_account_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000 1234 5678 9090"
            android:textColor="#0A3358"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20sp"
        >


        <TextView
            android:id="@+id/fund_limit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="額度:"
            android:textColor="#9CA7C3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fund_limit_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#0A3358"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

     <LinearLayout
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:orientation="vertical"
         android:gravity="center"
         >
         <TextView
             android:id="@+id/daily_limit_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="每日上限"
             android:textColor="#9CA7C3"
             android:textSize="16sp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintVertical_bias="0.6"
             app:layout_constraintHorizontal_bias="0.2"/>


         <TextView
             android:id="@+id/daily_limit_content"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="0000000"
             android:textColor="#000000"
             android:textSize="16sp"
             android:layout_marginTop="10dp"
             app:layout_constraintTop_toBottomOf="@+id/daily_limit_title"
             app:layout_constraintEnd_toEndOf="@+id/daily_limit_title"
             app:layout_constraintStart_toStartOf="@+id/daily_limit_title" />

     </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/weekly_limit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每週上限"
                android:textColor="#9CA7C3"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.6"
                app:layout_constraintHorizontal_bias="0.7"/>

            <TextView
                android:id="@+id/weekly_limit_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000000"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/weekly_limit_title"
                app:layout_constraintEnd_toEndOf="@+id/weekly_limit_title"
                app:layout_constraintStart_toStartOf="@+id/weekly_limit_title"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_close"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="right"
        android:background="@drawable/order_confirm_btn_frame"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="60dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:text="關閉" />

</LinearLayout>

</LinearLayout>